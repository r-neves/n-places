{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2017",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "noEmit": true
  },
  "include": ["../shared/**/*"],
  "ts-node": {
    "esm": true
  }
}
